{
  "name": "@vse-bude/backend",
  "version": "0.0.1",
  "private": true,
  "main": "./src/server.ts",
  "engines": {
    "npm": ">=8.0.0 <9.0.0",
    "node": ">=16.0.0 <17.0.0"
  },
  "scripts": {
    "start": "nodemon -r ts-node --files ./src/server.ts",
    "build": "tsc && tsc-alias",
    "serve": "node build/server.js",
    "db:generate": "prisma generate",
    "db:migrate:create": "prisma migrate dev --create-only --name",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node --transpile-only --files ./prisma/seed",
    "prettier:check": "prettier --check '*/**/*.{ts,tsx}' --loglevel=warn",
    "prettier:fix": "prettier --write '*/**/*.{ts,tsx}' --loglevel=warn",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "@prisma/client": "^4.1.1",
    "@vse-bude/shared": "file:../shared/build",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^9.1.4",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.3",
    "nodemon": "2.0.19",
    "prettier": "^2.7.1",
    "prisma": "^4.1.1",
    "prisma-erd-generator": "^1.0.2",
    "ts-node": "^10.1.0",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.0.0"
  }
}
