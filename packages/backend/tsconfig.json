{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "noEmit": false,
    "paths": {
      "@types": ["common/types"],
      "@enums": ["common/enums"],
      "@helpers": ["helpers"],
      "@providers": ["providers"],
      "@repositories": ["repositories"],
      "@services": ["services"],
      "@routes": ["api/routes"],
      "@middlewares": ["api/middlewares"],
      "@errors": ["error"],
      "@mappers": ["mapper"],
      "@validation": ["validation"],
      "@lang": ["lang"]
    },
    "outDir": "build"
  },
  "include": ["src", "../shared/src/common/types/payment"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
