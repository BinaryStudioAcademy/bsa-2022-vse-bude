{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "noEmit": false,
    "paths": {
      "@types": ["common/types"],
      "@enums": ["common/enums"],
      "@helpers": ["helpers"],
      "@models": ["data/models"],
      "@repositories": ["data/repositories"],
      "@services": ["services"],
      "@routes": ["api/routes"],
      "@middlewares": ["api/middlewares"]
    },
    "outDir": "build"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
